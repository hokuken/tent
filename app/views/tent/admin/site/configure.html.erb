<div class="container-fluid tent-configure-container">
  <%= form_for(@site, :url => admin_pitch_path, :html => {:multipart => true}) do |f| %>

    <div class="navbar">
      <div class="container-fluid">
        <div class="navbar-brand">サイトの設定</div>
        <div class="navbar-btn navbar-right">
          <%= f.submit '設定を保存', :class => 'btn btn-default' %>
        </div>
      </div>
    </div>
  
    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label 'サイトタイトル', :class => "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.text_field :title, :class => 'form-control', :placeholder => 'サイト名', :autofocus => true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label '概要説明', :class => "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.text_area :description, :class => 'form-control', :placeholder => 'サイトの説明', :rows => 2 %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'サイトURL', :class => "control-label col-sm-3" %>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon"><%= site_page_url %></span>
            <%= f.text_field :path, :class => 'form-control', :placeholder => 'フォルダ名', :autofocus => true %>
          </div>
        </div>
      </div>
  
  
      <div class="form-group">
        <%= f.label 'ロゴ画像', :class => "control-label col-sm-3" %>
        <div class="col-sm-9">
          <% if @site.logo_url? %>
             <label><%= f.check_box :remove_logo_url %> 削除</label>
            <%= image_tag(@site.logo_url.url, :width => 100) %>
            <%= f.hidden_field :logo_url_cache %>
          <% end %>
          <%= f.file_field :logo_url, :class => 'form-control', :style => 'float:none;display:inline-block;width:auto;' %>
        </div>
      </div>
    </div>
  
  <% end %>
  
</div>


<%= debug @site if Rails.env.development? %>

