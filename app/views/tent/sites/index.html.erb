<div class="contaner hango-sites-container">
  <div class="row">
    <div class="col-sm-2 text-right">
      <%= link_to '#', :class => 'hango-sites-add', :data => { toggle: 'modal', target: '#hango_sites_new'} do %>
        <i class="fa fa-plus"></i>
      <% end %>
    </div>
    <div class="col-sm-10">
      <% @sites.each do |site| %>
        <div class="thumbnail">
          <div><%= site.title %></div>
          <div class="text-muted">
            <%= site.description %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="hango_sites_new">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(@site, :html => {:multipart => true}) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">サイトの追加</h4>
        </div>
        <div class="modal-body">
          <div class="form-group title-field">
            <%= f.label 'URL', :class => "control-label" %>
            <div class="input-group">
              <span class="input-group-addon"><%= main_app.root_url %></span>
              <%= f.text_field :path, :class => 'form-control', :placeholder => 'フォルダ名', :autofocus => true %>
            </div>
          </div>
          <div class="form-group title-field">
            <%= f.label 'サイト名', :class => "control-label" %>
            <%= f.text_field :path, :class => 'form-control', :placeholder => 'サイト名', :autofocus => true %>
          </div>
          <div class="form-group">
            <%= f.label '概要説明', :class => "control-label" %>
            <%= f.text_area :description, :class => 'form-control', :placeholder => 'サイトの説明', :rows => 2 %>
          </div>
          <div class="form-group">
            <%= f.label 'ロゴ画像', :class => "control-label" %>
            <%= f.file_field :logo_url, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'メモ', :class => "control-label" %>
            <%= f.text_area :description, :class => 'form-control', :placeholder => 'メモ', :rows => 2 %>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-link" data-dismiss="modal">キャンセル</button>
          <%= f.submit '追加する', :class => 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>



<%= debug @sites if Rails.env.development? %>
