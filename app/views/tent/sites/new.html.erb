<div class="container hango-sites-container">
  <h4>サイトの追加</h4>

  <%= form_for(@site, :html => {:multipart => true}) do |f| %>
    <div class="form-group title-field">
      <%= f.label 'URL', :class => "control-label" %>
      <div class="input-group">
        <span class="input-group-addon"><%= main_app.root_url %></span>
        <%= f.text_field :path, :class => 'form-control', :placeholder => 'フォルダ名', :autofocus => true %>
      </div>
    </div>
    <div class="form-group title-field">
      <%= f.label 'サイト名', :class => "control-label" %>
      <%= f.text_field :title, :class => 'form-control', :placeholder => 'サイト名', :autofocus => true %>
    </div>
    <div class="form-group">
      <%= f.label '概要説明', :class => "control-label" %>
      <%= f.text_area :description, :class => 'form-control', :placeholder => 'サイトの説明', :rows => 2 %>
    </div>
    <div class="form-group">
      <%= f.label 'ロゴ画像', :class => "control-label" %>
      <%= f.file_field :logo_url, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label 'メモ', :class => "control-label" %>
      <%= f.text_area :note, :class => 'form-control', :placeholder => 'メモ', :rows => 2 %>
    </div>

    <div class="form-group">
      <%= link_to 'キャンセル', sites_path, class: 'btn btn-link' %>
      <%= f.submit '追加する', :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
